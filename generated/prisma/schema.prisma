generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String
  password  String
  birthDate DateTime

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  sleep Sleep[]
}

// A ideia aqui é que sempre que o usuário dormir, registar uma dormida e vincular a ele. Assim teremos estatísticas.
model Sleep {
  id       Int      @id @default(autoincrement())
  start    DateTime
  end      DateTime
  duration Int

  userId Int
  user   User @relation(fields: [userId], references: [id])
}
